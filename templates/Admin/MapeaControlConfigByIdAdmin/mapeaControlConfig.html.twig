
{% if mapeaControlConfig is empty %}
    <option value="empty" selected="selected">This control hasn't config paramaters</option>
{% else %}
    {% for configuration in mapeaControlConfig %}    
        {% if loop.first %}
            <option value="{{ configuration.id }}" selected="selected">{{ configuration.description }}</option>
        {% else %}
            <option value="{{ configuration.id }}">{{ configuration.description }}</option>
        {% endif %}
    {% endfor %}
{% endif %}



